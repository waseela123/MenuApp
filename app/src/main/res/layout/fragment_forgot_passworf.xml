<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etEmailForgotPassword"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_constraintBottom_toTopOf="@+id/btnResetForgotPassword"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:ems="10"
        android:hint="Enter email to reset..."
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="171dp" />

    <Button
        android:id="@+id/btnResetForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_constraintTop_toBottomOf="@+id/etEmailForgotPassword"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintStart_toStartOf="@+id/etEmailForgotPassword"
        android:text="Reset"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="483dp" />
</androidx.constraintlayout.widget.ConstraintLayout>