<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/etUsernameSignup"
        android:layout_width="280dp"
        android:layout_height="71dp"
        android:layout_marginTop="175dp"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:hint="username..."
        android:inputType="textEmailAddress"
        android:layout_constraintBottom_toTopOf="@+id/etPasswordSignup"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etPasswordSignup"
        android:layout_width="284dp"
        android:layout_height="85dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="74dp"
        android:ems="10"
        android:hint="password..."
        android:inputType="textPassword"
        android:layout_constraintBottom_toTopOf="@+id/btnSignupSignup"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="@+id/etUsernameSignup"
        android:layout_constraintTop_toBottomOf="@+id/etUsernameSignup" />

    <Button
        android:id="@+id/btnSignupSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="226dp"
        android:text="Signup"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintEnd_toEndOf="parent"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_constraintTop_toBottomOf="@+id/etPasswordSignup" />
</androidx.constraintlayout.widget.ConstraintLayout>
